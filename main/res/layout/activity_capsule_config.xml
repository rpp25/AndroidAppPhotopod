<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pitt.cs.cs1635.vsc5.group_project.MainActivity">


    <TextView
        android:id="@+id/textView_CapsuleConfig"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Capsule Configuration"
        android:textColor="@color/colorBlack"
        android:background="@color/colorBackgroundTint"
        android:textSize="15pt"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView_duration"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/textView_CapsuleConfig"
        android:gravity="left"
        android:text="Capsule Duration:"
        android:textSize="10pt"
        />

    <EditText
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_CapsuleConfig"
        android:layout_marginLeft="170dp"
        android:inputType="numberDecimal"
        android:hint="Days"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_CapsuleConfig"
        android:text=":"
        android:textSize="10pt"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="220dp"
        />

    <EditText
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_CapsuleConfig"
        android:layout_marginLeft="230dp"
        android:inputType="numberDecimal"
        android:hint="Hours"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_duration"
        android:text="Question: "
        android:textSize="10pt"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/edit_question"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_duration"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:maxLines="1"
        android:lines="1"
        android:scrollHorizontally="false"

        />

    <TextView
        android:id="@+id/text_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_question"
        android:text="Correct Answer: "
        android:textSize="10pt"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/edit_correct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_question"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:lines="1"
        android:scrollHorizontally="true"

        />

    <TextView
        android:id="@+id/text_incorrect1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_correct"
        android:text="Incorrect Answer 1: "
        android:textSize="10pt"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:id="@+id/edit_incorrect1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_correct"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:lines="1"
        android:scrollHorizontally="true"

        />

    <TextView
        android:id="@+id/text_incorrect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_incorrect1"
        android:text="Incorrect answer 2: "
        android:textSize="10pt"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:id="@+id/edit_incorrect2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_incorrect1"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:lines="1"
        android:scrollHorizontally="true"

        />

    <TextView
        android:id="@+id/text_incorrect3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_incorrect2"
        android:text="Incorrect answer 3: "
        android:textSize="10pt"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:id="@+id/edit_incorrect3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_incorrect2"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:lines="1"
        android:scrollHorizontally="true"

        />

    <Button
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="capsuleHome"
        android:layout_alignParentBottom="true"
        android:text="&lt; Back"
        />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="continueShare"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Next &gt;"
        />

</RelativeLayout>
